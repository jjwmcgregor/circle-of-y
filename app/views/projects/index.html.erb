<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Intro</th>
      <th>Impact</th>
      <th>Businesscase</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <% if project.user.id == @user.id %>
        <tr>
          <td><%= project.intro %></td>
          <td><%= project.impact %></td>
          <td><%= project.businesscase %></td>
          <td><%= project.user_id %></td>
          <td><%= link_to 'Show', user_project_path(@user,project) %></td>
          <td><%= link_to 'Destroy', user_project_path(@user,project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_user_project_path %>
